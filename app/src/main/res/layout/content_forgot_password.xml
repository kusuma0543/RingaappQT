<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ringaapp.ringauser.ForgotPassword"
    tools:showIn="@layout/activity_forgot_password">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
     android:background="@drawable/forgot_paswd"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:text="Enter Your mobile number to receive one time verification code"
        android:textColor="@color/colorAccent"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edforgotpswd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/rounded_edittextred"
        android:fontFamily="@font/nunito_semibold"

        android:hint="Mobile Number"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="10"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="#4b4b4b"
        android:textSize="18sp" />

    <Button
        android:id="@+id/butforgorpswd_otp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_editsecond"
        android:fontFamily="@font/nunito_semibold"
        android:hint="GET OTP"
        android:textColorHint="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
</LinearLayout>
