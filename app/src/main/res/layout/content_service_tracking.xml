<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/appbar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ringaapp.ringauser.ServiceTracking"
    tools:showIn="@layout/activity_service_tracking">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_gravity="center_horizontal"
        android:translationZ="9dp"
        app:cardUseCompatPadding="true">
        <ImageView
            android:id="@+id/tracking_ongoing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tracking_start"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/tracking_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:visibility="invisible"
        android:background="@drawable/tracking_ongoing"/>
        <ImageView
            android:id="@+id/tracking_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:visibility="invisible"
        android:background="@drawable/tracking_done"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"

        android:orientation="vertical">
        <TextView
            android:id="@+id/textfeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:fontFamily="@font/nunito_semibold"
            android:textStyle="bold"
            android:textSize="16sp"
            android:visibility="invisible"
            android:textColor="@color/colorBlack"/>
        <EditText
            android:id="@+id/track_feedback"
            android:background="@drawable/imagebutton_border"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:textSize="14sp"
            android:gravity="start"
            android:visibility="invisible"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/textrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratings:"
            android:padding="10dp"
            android:maxLines="4"
            android:fontFamily="@font/nunito_semibold"
            android:textStyle="bold"
            android:textSize="16sp"
            android:visibility="invisible"
            android:textColor="@color/colorBlack"/>
        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX=".8"
            android:stepSize="1"
            android:scaleY=".8"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:max="5"
            android:visibility="invisible"
            android:layout_weight="2"
            />

    </LinearLayout>
    <Button
        android:id="@+id/submitbut"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_editsecond"
        android:fontFamily="@font/nunito_semibold"
        android:hint="Submit"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textColorHint="#fff"
        android:textSize="18sp" />
</LinearLayout>

</RelativeLayout>
